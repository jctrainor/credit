from Tkinter import *
import tkFont
import RPi.GPIO as GPIO

GPIO.setmode(GPIO.BOARD)
GPIO.setup(40, GPIO.OUT)
GPIO.output(40, GPIO.LOW)

GPIO.setmode(GPIO.BOARD)
GPIO.setup(38, GPIO.OUT)
GPIO.output(38, GPIO.LOW)

GPIO.setmode(GPIO.BOARD)
GPIO.setup(36, GPIO.OUT)
GPIO.output(36, GPIO.LOW)

win = Tk()

myFont = tkFont.Font(family = 'Helvetica', size = 36, weight = 'bold')

def ledred():
print("LED button pressed")
if GPIO.input(40) :
  GPIO.output(40,GPIO.LOW)
ledButton["text"] = "red ON"
else:
GPIO.output(40,GPIO.HIGH)
                ledButton["text"] = "red OFF"
                
def ledblue():
print("LED button pressed")
if GPIO.input(38) :
  GPIO.output(38,GPIO.LOW)
ledButton["text"] = "Blue ON"
else:
GPIO.output(38,GPIO.HIGH)
                ledButton["text"] = "Blue OFF"
                
def ledgreen():
print("LED button pressed")
if GPIO.input(36) :
  GPIO.output(36,GPIO.LOW)
ledButton["text"] = "Green ON"
else:
GPIO.output(36,GPIO.HIGH)
                ledButton["text"] = "green OFF"

def exitProgram():
print("Exit Button pressed")
        GPIO.cleanup()
win.quit()

win.title("First GUI")
win.geometry('800x480')

exitButton  = Button(win, text = "Exit", font = myFont, command = exitProgram, height =2 , width = 6) 
exitButton.pack(side = BOTTOM)

ledButton = Button(win, text = "LED ON", font = myFont, command = ledred, height = 2, width =8 )
ledButton.pack()


ledButton = Button(win, text = "LED ON", font = myFont, command = ledblue, height = 2, width =8 )
ledButton.pack()

ledButton = Button(win, text = "LED ON", font = myFont, command = ledgreen, height = 2, width =8 )
